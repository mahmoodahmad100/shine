<header>
	<h2>Customer Search</h2>
</header>

<section>
	<%= form_for :customers, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "first , last name or email", class: "form-control" %>
			<span class="input-group-btn"><%= submit_tag "find customers", class: "btn btn-primary" %></span>
		</div>
	<% end %>
</section>

<section>
	<header>
		<h1>Results</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>email</th>
					<th>Joined</th>					
				</tr>
			</thead>
			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.first_name %></td>
					<td><%= customer.last_name %></td>
					<td><%= customer.email %></td>
					<td><%= customer.created_at %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</header>
</section>