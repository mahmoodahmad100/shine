<header>
	<h2>Customer Search</h2>
</header>

<% if @customers.present? %>
	<%= render partial: "pager", locals: {keywords: @keywords, page: @page} %>
<% end %>

<section>
	<%= form_for :customers, method: :get do |f| %>
		<div class="input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "first , last name or email", class: "form-control" %>
			<span class="input-group-btn"><%= submit_tag "find customers", class: "btn btn-primary" %></span>
		</div>
	<% end %>
</section>

<section>
	<header>
		<h1>Results</h1>
	</header>
	<ol class="list-group">
		<% @customers.each do |customer| %>
		<li class="list-group-item clearfix">
			<h3 class="pull-right">
				<small class="text-uppercase">Joined</small>
				<%= l customer.created_at.to_date %>
			</h3>
			<h3>
				<%= customer.first_name %> <%= customer.last_name %>
				<small><%= customer.username %></small>
			</h3>
			<h4><%= customer.email %></h4>
		</li>
		<% end %>
	</ol>

	<% if @customers.present? %>
		<%= render partial: "pager", locals: {keywords: @keywords, page: @page} %>
	<% end %>
</section>